@page "/Profile"
@using GestionPlacesParking.Web.UI.CustomMethods
@using System.Globalization;
@model GestionPlacesParking.Web.UI.Pages.Customs.ProfileModel
@{
    Layout = CorrectLayoutCustomMethod.GetCorrectLayout(HttpContext);

    string MesReservations = string.Join(", ", Model.ProfileLocal.ProfileUserMonthsListLocal.OrderBy(p => p.Mois).Select(p => p.NbReservations));
    string MoyenneReservations = string.Join(", ", Model.ProfileLocal.ProfileUserMonthsListLocal.OrderBy(p => p.Mois).Select(p => p.MoyenneMois.ToString().Replace(',', '.')));
    string MaMoyenneReservations = Model.ProfileLocal.MaMoyenneAnnee.ToString().Replace(',', '.');
}

<h1 class="display-6">Tableau de mes réservations sur l'année </h1>
<span class="text-dark">Moyenne de mes réservations sur l'année : <b>@Model.ProfileLocal.MaMoyenneAnnee</b> j/mois</span>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th scope="col" class="text-center">Mois</th>
            <th scope="col" class="text-center">Nombre de jours réservés</th>
            <th scope="col" class="text-center">Moyenne générale des réservations /mois</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profileUserMonthsLocal in Model.ProfileLocal.ProfileUserMonthsListLocal)
        {
            string monthName = CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(profileUserMonthsLocal.Mois);
            monthName = char.ToUpperInvariant(monthName[0]) + monthName.Substring(1);

            <tr class="@(profileUserMonthsLocal.NbReservations == 0 ? "table-secondary" : "")">
                <td class="text-center">@monthName</td>
                <td class="text-center">@profileUserMonthsLocal.NbReservations</td>
                <td class="text-center">@profileUserMonthsLocal.MoyenneMois</td>
            </tr>
        }

        <tr>
            <td class="text-center"><b>TOTAL</b></td>
            <td class="text-center"><b>@Model.ProfileLocal.TotalReservations</b></td>
            <td class="text-center"><b>@Model.ProfileLocal.MoyenneAnnee</b></td>
        </tr>
    </tbody>
</table>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                Courbe de mes réservations sur l'année
            </div>
            <div class="card-body">
                <canvas class="my-4 h-25" id="line"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/chart.js/dist/chart.umd.js"></script>

@section scripts {
    <script>
        let dataMyReservations = [@MesReservations];
        let dataMyAverage = @MaMoyenneReservations;
        let dataAverage = [@MoyenneReservations];

        let lineChart = document.getElementById("line").getContext('2d');

        new Chart(lineChart, {
            type: "line",
            data: {
                labels: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"],
                datasets: [{
                    label: "Nombre de jours réservés",
                    data: dataMyReservations
                },
                {
                    label: "Ma Moyenne annuelle",
                    data: [...Array(12)].map(x => dataMyAverage)
                },
                {
                    label: "Moyenne générale /mois",
                    data: dataAverage,
                    borderDash: [6, 6]
                }]
            },
        });
    </script>
}